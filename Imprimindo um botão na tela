//Imprimindo botão na tela
var xRec = 100, yRec = 100;
var compRec = 100, altRec = 50;
var teste = 0;

var cor = 255;

function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(cor);
  
  fill ("black");
  rect (100, 100, 100, 50, 10);
  fill ("red");
  text ("Mudar a cor", 115 ,130);
  
}


function mouseClicked(){
  if (colisao(xRec, yRec, compRec, altRec, mouseX, mouseY) == true){//Executa a função do botao
    cor = random (0, 255);
  }
  else{ //Executa outra coisa caso não clique no botão
  }
  
  
}
  
  
  
  
  
function colisao(xA, yA, compA, altA, xb, yb){
  if (xA + compA < xb) //A está a esquerda de B
    return false;
  if (xb < xA) //A está a direita de B
    return false;
  if (yA > yb) //A está embaixo de B
    return false;
  if (yA + altA < yb) //A está acima de B
    return false;
  
  return true; //Se ele não entrar em nenhuma dessas 4 situações,
               //então ele está colidindo
}
  
